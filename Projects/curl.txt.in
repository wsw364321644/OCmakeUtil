cmake_minimum_required(VERSION 3.24)
include(ExternalProject)
project(project_curl)

set(CMAKE_PREFIX_PATH @CMAKE_PREFIX_PATH@)
set(CURL_STATIC_CRT @CURL_STATIC_CRT@)
set(IMPORT_PROJECT_STATIC @IMPORT_PROJECT_STATIC@)

if(IMPORT_PROJECT_STATIC)
    set(BUILD_SHARED_LIBS OFF)
else()
    set(BUILD_SHARED_LIBS ON)
endif()

find_package(Libpsl)

ExternalProject_Add(curl
  GIT_REPOSITORY @GIT_REPOSITORY@
  GIT_TAG @IMPORT_PROJECT_TAG@
  GIT_SHALLOW @GIT_SHALLOW_VAL@
  CMAKE_ARGS
  -DCMAKE_INSTALL_PREFIX:PATH=<INSTALL_DIR>
  CMAKE_CACHE_ARGS
  -DCMAKE_PREFIX_PATH:STRING=${CMAKE_PREFIX_PATH}
  -DCURL_STATIC_CRT:BOOL=${CURL_STATIC_CRT}
  -DBUILD_CURL_EXE:BOOL=OFF
  -DBUILD_SHARED_LIBS:BOOL=${BUILD_SHARED_LIBS}
  -DBUILD_TESTING:BOOL=OFF
  -DCURL_USE_SCHANNEL:BOOL=ON
  -DCURL_ZLIB:STRING=AUTO
  -DCURL_USE_LIBPSL:BOOL=${LIBPSL_FOUND}
)