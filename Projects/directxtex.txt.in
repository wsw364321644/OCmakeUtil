cmake_minimum_required(VERSION 3.24)
include(ExternalProject)
project(project_DirectXTex)

set(OCMAKEUTIL_PATH @OCMAKEUTIL_PATH@)
set(CMAKE_MSVC_RUNTIME_LIBRARY @CMAKE_MSVC_RUNTIME_LIBRARY@)
set(CMAKE_MSVC_RUNTIME_LIBRARY @CMAKE_MSVC_RUNTIME_LIBRARY@)


ExternalProject_Add(DirectXTex
  GIT_REPOSITORY @GIT_REPOSITORY@
  GIT_TAG @IMPORT_PROJECT_TAG@
  GIT_SHALLOW @GIT_SHALLOW_VAL@
  CMAKE_ARGS
  -DCMAKE_INSTALL_PREFIX:PATH=<INSTALL_DIR>
  CMAKE_CACHE_ARGS
  -DCMAKE_MSVC_RUNTIME_LIBRARY:STRING=@CMAKE_MSVC_RUNTIME_LIBRARY@
  -DBUILD_SAMPLE:BOOL=OFF
)