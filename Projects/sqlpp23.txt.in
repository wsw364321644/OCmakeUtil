cmake_minimum_required(VERSION 3.24)
include(ExternalProject)
project(project_sqlpp23)

set(CMAKE_PREFIX_PATH @CMAKE_PREFIX_PATH@)
set(OCMAKEUTIL_PATH @OCMAKEUTIL_PATH@)

ExternalProject_Add(sqlpp23
  GIT_REPOSITORY @GIT_REPOSITORY@
  GIT_TAG @IMPORT_PROJECT_TAG@
  GIT_SHALLOW @GIT_SHALLOW_VAL@
  GIT_SUBMODULES ""
  CMAKE_ARGS
  -DCMAKE_INSTALL_PREFIX:PATH=<INSTALL_DIR>
  CMAKE_CACHE_ARGS
  -DCMAKE_POLICY_DEFAULT_CMP0090:STRING=NEW
  -DBUILD_SQLITE3_CONNECTOR:BOOL=OFF
  -DBUILD_TESTING:BOOL=OFF
)
